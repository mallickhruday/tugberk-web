@using Tugberk.Web.Controllers
@model TagPageViewModel

@foreach(var post in Model.PaginatedPostsResult.Items) 
{
    @await Html.PartialAsync("Post", post)
}

<hr />

<div>
    <div class="pull-left">
        <nav aria-label="...">
            <ul class="pagination">
                @if (Model.PaginatedPostsResult.HasPrevious)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action(nameof(PostsController.GetByTag), "Posts", new { tagSlug = Model.TagSlug, page = Model.CurrentPage - 1 })">Previous</a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">Previous</a>
                    </li>
                }
            </ul>
        </nav>
    </div>

    <div class="pull-right">
        <nav aria-label="...">
            <ul class="pagination">
                @if (Model.PaginatedPostsResult.HasNext)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action(nameof(PostsController.GetByTag), "Posts", new { tagSlug = Model.TagSlug, page = Model.CurrentPage + 1 })">Next</a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">Next</a>
                    </li>
                }
            </ul>
        </nav>
    </div>

    <div class="clearfix"></div>
</div>